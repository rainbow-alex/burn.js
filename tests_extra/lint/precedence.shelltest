and_or.burn:
	true and true or true

$ burn and_or.burn
	* stderr
		Add parentheses to make `and`/`or` precedence explicit.
		in and_or.burn on line 1
			true and true or true
			     ^
	* exit status nonzero

or_and.burn:
	true or true and true

$ burn or_and.burn
	* stderr
		Add parentheses to make `or`/`and` precedence explicit.
		in or_and.burn on line 1
			true or true and true
			     ^
	* exit status nonzero

not_or.burn:
	not true or false

$ burn not_or.burn
	* stderr
		Add parentheses to make `not`/`or` precedence explicit.
		in not_or.burn on line 1
			not true or false
			^
	* exit status nonzero

not_and.burn:
	not true and false

$ burn not_and.burn
	* stderr
		Add parentheses to make `not`/`and` precedence explicit.
		in not_and.burn on line 1
			not true and false
			^
	* exit status nonzero

not_is.burn:
	not 1 is String

$ burn not_is.burn
	* stderr
		Use `... is not ...` instead of `not ... is ...`.
		in not_is.burn on line 1
			not 1 is String
			^
	* exit status nonzero

ok.burn:
	print true and not false
	print false or not false
	print 3 is not String

$ burn ok.burn
	* stdout
		true
		true
		true

tolerant.burn:
	true and true or true
	true or true and true
	not true or false
	not true and false
	not 1 is String

$ burn --tolerant tolerant.burn
