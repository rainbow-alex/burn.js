is_or.burn:
	assert( ( ( 1 is Nothing ) or Integer ) == Integer )
	assert( ( 1 is ( Nothing or Integer ) ) == false )
	assert( ( 1 is Nothing or Integer ) == Integer )

$ $BURN is_or.burn

is_and.burn:
	assert( ( ( 1 is Something ) and Integer ) == Integer )
	assert( ( 1 is ( Something and Integer ) ) == true )
	assert( ( 1 is Something and Integer ) == Integer )

$ $BURN is_and.burn

is_not.burn:
	import test
	assert( ( 1 is not Float ) == true )
	test.assert_throws( function() { 1 is ( not Float ) }, TypeError )

$ $BURN is_not.burn

is_is.burn:
	nothing is nothing is nothing

$ $BURN is_is.burn
	* exit status nonzero

is_is_not.burn:
	nothing is nothing is not nothing

$ $BURN is_is_not.burn
	* exit status nonzero

is_eq.burn:
	nothing is nothing == nothing

$ $BURN is_eq.burn
	* exit status nonzero

is_neq.burn:
