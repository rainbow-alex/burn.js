is_union.burn:
	import test
	test.assert_throws( function() { ( 1 is Float ) | Integer }, TypeError )
	assert( ( 1 is ( Float | Integer ) ) == true )
	assert( ( 1 is Float | Integer ) == true )

$ $BURN is_union.burn

is_intersection.burn:
	import test
	test.assert_throws( function() { ( 1 is Something ) & Nothing }, TypeError )
	assert( ( 1 is ( Something & Nothing ) ) == false )
	assert( ( 1 is Something & Nothing ) == false )

$ $BURN is_intersection.burn
