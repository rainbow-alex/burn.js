lt_is.burn:
	nothing < nothing is nothing

$ $BURN --tolerant lt_is.burn
	* exit status nonzero

lt_is_not.burn:
	nothing < nothing is not nothing

$ $BURN --tolerant lt_is_not.burn
	* exit status nonzero

