lt_or.burn:
	assert( ( ( 1 < 1 ) or nothing ) == nothing )
	assert( ( 1 < ( 1 or nothing ) ) == false )
	assert( ( 1 < 1 or nothing ) == nothing )

$ $BURN --tolerant lt_or.burn

lt_and.burn:
	assert( ( ( 1 < 1 ) and 2 ) == false )
	assert( ( 1 < ( 1 and 2 ) ) == true )
	assert( ( 1 < 1 and 2 ) == false )

$ $BURN --tolerant lt_and.burn

