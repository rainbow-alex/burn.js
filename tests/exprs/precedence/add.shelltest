add_or.burn:
	assert( ( ( 1 + 0 ) or 1 ) == 1 )
	assert( ( 1 + ( 0 or 1 ) ) == 2 )
	assert( ( 1 + 0 or 1 ) == 1 )

$ $BURN --tolerant add_or.burn

add_and.burn:
	assert( ( ( 1 + 1 ) and 1 ) == 1 )
	assert( ( 1 + ( 1 and 1 ) ) == 2 )
	assert( ( 1 + 1 and 1 ) == 1 )

$ $BURN --tolerant add_and.burn

