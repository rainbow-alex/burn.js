mul_add.burn:
	assert( ( ( 2 * 1 ) + 1 ) == 3 )
	assert( ( 2 * ( 1 + 1 ) ) == 4 )
	assert( ( 2 * 1 + 1 ) == 3 )

$ $BURN --tolerant mul_add.burn

mul_sub.burn:
	assert( ( ( 2 * 1 ) - 1 ) == 1 )
	assert( ( 2 * ( 1 - 1 ) ) == 0 )
	assert( ( 2 * 1 - 1 ) == 1 )

$ $BURN --tolerant mul_sub.burn

