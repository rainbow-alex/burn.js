mul_or.burn:
	assert( ( ( 2 * 0 ) or 1 ) == 1 )
	assert( ( 2 * ( 0 or 1 ) ) == 2 )
	assert( ( 2 * 0 or 1 ) == 1 )

$ $BURN --tolerant mul_or.burn

mul_and.burn:
	assert( ( ( 2 * 1 ) and 1 ) == 1 )
	assert( ( 2 * ( 1 and 1 ) ) == 2 )
	assert( ( 2 * 1 and 1 ) == 1 )

$ $BURN --tolerant mul_and.burn

