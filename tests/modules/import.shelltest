example/burn_module.json:
	{ "include": "src/example.burn" }

example/src/example.burn:
	print "example loaded"

import_example.burn:
	import example

$ $BURN import_example.burn
	* stdout
		example loaded

import_cached.burn:
	let $foo = function() {
		import example
	}
	$foo()
	$foo()

$ $BURN import_cached.burn
	* stdout
		example loaded

