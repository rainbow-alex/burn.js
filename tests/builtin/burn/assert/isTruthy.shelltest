truthy.burn:
	assert.isTruthy( true )
	assert.isTruthy( 1 )
	assert.isTruthy( [ 1, 2, 3 ] )

$ $BURN truthy.burn

falsy1.burn:
	assert.isTruthy( false )

$ $BURN falsy1.burn
	* exit status nonzero

falsy2.burn:
	assert.isTruthy( 0 )

$ $BURN falsy2.burn
	* exit status nonzero

fail.burn:
	try {
		assert.isTruthy( false )
	} catch AssertionError $e {
		print "AssertionError"
	}

$ $BURN fail.burn
	* stdout
		AssertionError
