assert_truthy.burn:
	assert( true )
	assert( 1 )
	assert( [ 1, 2, 3 ] )

$ $BURN assert_truthy.burn

assert_falsy1.burn:
	assert( false )

$ $BURN assert_falsy1.burn
	* exit status nonzero

assert_falsy2.burn:
	assert( 0 )

$ $BURN assert_falsy2.burn
	* exit status nonzero

throws_error.burn:
	try {
		assert( false )
	} catch AssertionError $e {
		print "AssertionError"
	}

$ $BURN throws_error.burn
	* stdout
		AssertionError

