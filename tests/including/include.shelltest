a.burn:
	include "b.burn"

b.burn:
	print "b"

$ burn a.burn
	* stdout
		b

a.burn:
	include "inc/a.burn"

inc/a.burn:
	include "b.burn"

b.burn:
	print "top b"

inc/b.burn:
	print "inc b"

$ burn a.burn
	* stdout
		inc b

a.burn:
	let $foo = 3
	try {
		include "b.burn"
	} catch IncludeError $e {
		print "IncludeError"
	}

b.burn:
	print $foo

$ burn a.burn
	* stdout
		IncludeError

a.burn:
	try {
		include "missing.burn"
	} catch IncludeError $e {
		print "IncludeError"
	}

$ burn a.burn
	* stdout
		IncludeError

a.burn:
	try {
		include 3
	} catch TypeError $e {
		print "TypeError"
	}

$ burn a.burn
	* stdout
		TypeError

